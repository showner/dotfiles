#Load global aliases
if [ -e $ZSHDIRCONF/aliases/global ]; then
  source $ZSHDIRCONF/aliases/global
fi

# OSX conf
if [ $(uname) = "Darwin" ]; then
  # Load OSX aliases
  if [ -e $ZSHDIRCONF/darwin/aliases ]; then
    loadings+="Macos aliases "
    source $ZSHDIRCONF/darwin/aliases
  fi

  # Load to PATH for some binaries, should be last loaded
  if [ -e $ZSHDIRCONF/darwin/path_things ]; then
    loadings+="Softs to PATH"
    source $ZSHDIRCONF/darwin/path_things
  fi
fi

# Linux conf
if [ $(uname) = "Linux" ]; then
  # Load Linux config
  if [ -e $ZSHDIRCONF/linux/aliases ]; then
    loadings+="Linux aliases "
    source $ZSHDIRCONF/linux/aliases
  fi

  # Load to PATH for some binaries, should be last loaded
  if [ -e $ZSHDIRCONF/linux/path_things ]; then
    loadings+="Softs to PATH"
    source $ZSHDIRCONF/linux/path_things
  fi
fi

# Load local config
if [ -e $ZSHDIRCONF/conf.local ]; then
  loadings+="Local conf "
  source $ZSHDIRCONF/conf.local
fi

# Load prompt config, should be after local config
if [ -e $ZSHDIRCONF/prompt ]; then
  loadings+="Prompt "
  source $ZSHDIRCONF/prompt
fi

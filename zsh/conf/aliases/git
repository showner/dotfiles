# Git commands
alias gp='git push'
alias gpf='git push --force-with-lease'
alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gcm='git commit -m'
alias gca='git commit --amend'
alias gcan='git commit --amend --no-edit'
alias gck='git checkout'
alias glg="git log --graph --pretty=format:'%C(bold)â€“%Creset %C(red bold)%h%d%Creset | %C(green)%an%Creset | %C(magenta)%cr%Creset | %C(cyan)%s%Creset'"
alias gsta='git stash'
alias gstal='git stash list'
alias gstap='git stash pop'
alias gclear="git for-each-ref --format "%(refname:short)" refs/heads | grep -v "main" | xargs git branch -D"
